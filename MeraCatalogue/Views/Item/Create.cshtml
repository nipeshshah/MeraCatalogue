@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h1>Item Details</h1>
        <form>
            <div class="form-group">
                <label for="itemNumber">Item Number</label>
                <input type="text" class="form-control" id="itemNumber" placeholder="Enter Item Number">
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Enter Title">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Enter Description"></textarea>
            </div>
            <div class="form-group">
                <label for="mrp">MRP</label>
                <input type="number" class="form-control" id="mrp" placeholder="Enter MRP">
            </div>
            <div class="form-group">
                <label for="catalogues">Catalogues</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="catalogue1" value="catalogue1">
                    <label class="form-check-label" for="catalogue1">Catalogue 1</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="catalogue2" value="catalogue2">
                    <label class="form-check-label" for="catalogue2">Catalogue 2</label>
                </div>
                <!-- Add more checkboxes for other catalogues -->
            </div>
            <div class="form-group">
                <label for="image1">Image 1</label>
                <input type="file" class="form-control-file" id="image1">
            </div>
            <div class="form-group">
                <label for="image2">Image 2</label>
                <input type="file" class="form-control-file" id="image2">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

